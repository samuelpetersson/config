call plug#begin()
Plug 'sheerun/vim-polyglot'
Plug 'airblade/vim-gitgutter'
call plug#end()

set nocompatible
syntax enable
filetype plugin indent on
colorscheme smyck

set ignorecase smartcase
set incsearch
set completeopt=longest,menuone
set iskeyword+=-
set path+=**
set wildmenu

set nowrap
set autoindent
set tabstop=2 shiftwidth=2 softtabstop=2
set expandtab
let g:loaded_matchparen=1

set autoread
set hidden
set nobackup
set noswapfile

command Bd bp|bd #

nnoremap s :w<cr>
nnoremap <Tab> <C-w>w
nnoremap <S-Tab> <C-w>W

nnoremap <space> :
nnoremap <space>f :find 

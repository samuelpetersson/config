call plug#begin()
Plug 'sheerun/vim-polyglot'
Plug 'tpope/vim-surround'
Plug 'airblade/vim-gitgutter'
Plug 'mattn/emmet-vim'
Plug 'vifm/vifm.vim'
call plug#end()

syntax enable
filetype plugin indent on
colorscheme smyck

set nocompatible
set path+=**
set iskeyword+=-
set wildmenu
let g:loaded_matchparen=1
set backspace=2
set relativenumber
set number
set nowrap
set tabstop=2
set shiftwidth=2
set autoread
set ignorecase
set incsearch
set hidden
set nobackup
set nowb
set noswapfile
set listchars=tab:..,trail:_,extends:>,precedes:<,nbsp:~
set laststatus=2
set statusline=%t%=%{v:register}:%{getreg(':')}

set rtp+=/usr/local/opt/fzf
set grepprg=ag\ --nogroup\ --nocolor

nnoremap h :bprev<cr>
nnoremap l :bnext<cr>

nnoremap <Tab> <C-w>w
nnoremap <S-Tab> <C-w>W

nnoremap <space> :
nnoremap <space><space> :<up><cr>
nnoremap <space>j :FZF<cr>
nnoremap <space>k :EditVifm<cr>
nnoremap <c-k> :<up>

cmap w!! w !sudo tee % >/dev/null
